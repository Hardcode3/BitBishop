{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install"
      }
    },
    {
      "name": "clang_debug",
      "inherits": "default",
      "generator": "Ninja",
      "description": "Debug build with debug symbols and no optimizations",
      "cacheVariables": {
        "ENABLE_COVERAGE": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang_release",
      "inherits": "default",
      "generator": "Ninja",
      "description": "Release build with optimizations",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msvc_debug",
      "inherits": "default",
      "description": "Debug build using MSVC",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msvc_release",
      "inherits": "default",
      "description": "Release build using MSVC",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang_debug",
      "configurePreset": "clang_debug"
    },
    {
      "name": "clang_release",
      "configurePreset": "clang_release"
    },
    {
      "name": "msvc_debug",
      "configurePreset": "msvc_debug",
      "configuration": "Debug"
    },
    {
      "name": "msvc_release",
      "configurePreset": "msvc_release",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "environment": {
        "LLVM_PROFILE_FILE": "${sourceDir}/build/clang_debug/coverage/${presetName}/%m.profraw"
      }
    },
    {
      "name": "tier-quick",
      "hidden": true,
      "inherits": "test-base",
      "description": "Quick validation (fast unit & smoke tests)",
      "filter": {
        "include": { "label": "^tier_quick$" }
      }
    },
    {
      "name": "tier-intermediate",
      "hidden": true,
      "inherits": "test-base",
      "description": "Intermediate validation (standard perft)",
      "filter": {
        "include": { "label": "^tier_intermediate$" }
      }
    },
    {
      "name": "tier-deep",
      "hidden": true,
      "inherits": "test-base",
      "description": "Deep validation (exhaustive perft)",
      "filter": {
        "include": { "label": "^tier_deep$" }
      }
    },
    {
      "name": "tier-all",
      "hidden": true,
      "inherits": "test-base"
    },
    {
      "name": "quick-validation-clang-debug",
      "inherits": "tier-quick",
      "configurePreset": "clang_debug"
    },
    {
      "name": "intermediate-validation-clang-debug",
      "inherits": "tier-intermediate",
      "configurePreset": "clang_debug"
    },
    {
      "name": "deep-validation-clang-debug",
      "inherits": "tier-deep",
      "configurePreset": "clang_debug"
    },
    {
      "name": "full-suite-clang-debug",
      "inherits": "tier-all",
      "configurePreset": "clang_debug"
    },
    {
      "name": "quick-validation-clang-release",
      "inherits": "tier-quick",
      "configurePreset": "clang_release"
    },
    {
      "name": "intermediate-validation-clang-release",
      "inherits": "tier-intermediate",
      "configurePreset": "clang_release"
    },
    {
      "name": "deep-validation-clang-release",
      "inherits": "tier-deep",
      "configurePreset": "clang_release"
    },
    {
      "name": "full-suite-clang-release",
      "inherits": "tier-all",
      "configurePreset": "clang_release"
    },
    {
      "name": "quick-validation-msvc-debug",
      "inherits": "tier-quick",
      "configurePreset": "msvc_debug",
      "configuration": "Debug"
    },
    {
      "name": "intermediate-validation-msvc-debug",
      "inherits": "tier-intermediate",
      "configurePreset": "msvc_debug",
      "configuration": "Debug"
    },
    {
      "name": "full-suite-msvc-debug",
      "inherits": "tier-all",
      "configurePreset": "msvc_debug",
      "configuration": "Debug"
    },
    {
      "name": "quick-validation-msvc-release",
      "inherits": "tier-quick",
      "configurePreset": "msvc_release",
      "configuration": "Release"
    },
    {
      "name": "intermediate-validation-msvc-release",
      "inherits": "tier-intermediate",
      "configurePreset": "msvc_release",
      "configuration": "Release"
    },
    {
      "name": "deep-validation-msvc-release",
      "inherits": "tier-deep",
      "configurePreset": "msvc_release",
      "configuration": "Release"
    },
    {
      "name": "full-suite-msvc-release",
      "inherits": "tier-all",
      "configurePreset": "msvc_release",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "clang_release",
      "configurePreset": "clang_release"
    },
    {
      "name": "msvc_release",
      "configurePreset": "msvc_release"
    }
  ]
}